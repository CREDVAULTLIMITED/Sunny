# Payment Gateway Configuration - DEVELOPMENT ENVIRONMENT
# -----------------------------
SUNNY_ENVIRONMENT=sandbox

# API Configuration
PORT=3001
API_VERSION=v2
CORS_ORIGIN=http://localhost:3000
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Database Configuration
# ----------------------
DATABASE_URL=postgres://postgres:postgres@localhost:5432/sunny_payments_dev
DB_SSL=false

# Connection pool settings for development
DB_CONNECTION_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# Security settings for development
ENCRYPTION_KEY=development_encryption_key_replace_in_production
JWT_SECRET=development_jwt_secret_replace_in_production
JWT_EXPIRY=86400
REFRESH_TOKEN_SECRET=development_refresh_token_secret_replace_in_production
REFRESH_TOKEN_EXPIRY=604800
PASSWORD_SALT_ROUNDS=10
API_RATE_LIMIT=1000

# Disable production-only features
AI_ROUTING_ENABLED=false
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=
ENABLE_PERFORMANCE_METRICS=false

# Frontend API Configuration
# -------------------------
# Make sure this matches what the frontend expects
REACT_APP_API_URL=http://localhost:3001/api/v2

