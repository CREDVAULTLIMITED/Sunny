CRYPTO_ETH_CONFIRMATIONS=12
CRYPTO_USDT_CONFIRMATIONS=12
CRYPTO_USDC_CONFIRMATIONS=12

# Exchange Rate Configuration
# -------------------------
# Source for cryptocurrency exchange rates (options: coinbase, binance, kraken)
