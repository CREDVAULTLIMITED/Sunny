{
  "name": "sunny-platform",
  "version": "1.0.0",
  "description": "Sunny Payment Gateway - Complete Platform Monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:marketing": "turbo run dev --filter=marketing",
    "dev:user-dashboard": "turbo run dev --filter=user-dashboard",
    "dev:business-dashboard": "turbo run dev --filter=business-dashboard",
    "dev:institutions-portal": "turbo run dev --filter=institutions-portal",
    "dev:admin-dashboard": "turbo run dev --filter=admin-dashboard",
    "dev:developer-portal": "turbo run dev --filter=developer-portal",
    "build": "turbo run build",
    "build:marketing": "turbo run build --filter=marketing",
    "build:all-apps": "turbo run build --filter='./apps/*'",
    "build:all-packages": "turbo run build --filter='./packages/*'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules",
    "reset": "npm run clean && npm install",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.3.3",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.0.0"
}