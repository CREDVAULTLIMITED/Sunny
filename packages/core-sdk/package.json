{
  "name": "@sunny/core-sdk",
  "version": "1.0.0",
  "description": "Sunny Payment Gateway Core SDK - TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./payment-gateway": {
      "types": "./dist/payment-gateway.d.ts",
      "import": "./dist/payment-gateway.js",
      "require": "./dist/payment-gateway.js"
    },
    "./api-client": {
      "types": "./dist/api-client.d.ts",
      "import": "./dist/api-client.js",
      "require": "./dist/api-client.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sunny/shared": "workspace:*",
    "axios": "^1.11.0",
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.8",
    "eslint": "^9",
    "jest": "^29.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5"
  },
  "keywords": [
    "payment",
    "gateway",
    "sdk",
    "typescript",
    "fintech"
  ]
}
