{
  "name": "sunny-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Sunny Payment Gateway - Complete fintech platform with Kenya-first approach",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean",
    "build:marketing": "turbo run build --filter=@sunny/marketing",
    "build:dashboards": "turbo run build --filter=*dashboard*",
    "dev:marketing": "turbo run dev --filter=@sunny/marketing",
    "dev:user": "turbo run dev --filter=@sunny/user-dashboard",
    "dev:business": "turbo run dev --filter=@sunny/business-dashboard",
    "dev:institutions": "turbo run dev --filter=@sunny/institutions-portal",
    "dev:admin": "turbo run dev --filter=@sunny/admin-dashboard",
    "dev:developer": "turbo run dev --filter=@sunny/developer-portal",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=packages/* && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@turbo/gen": "^2.3.0",
    "eslint": "^9",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.3.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}